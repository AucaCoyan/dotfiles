	email = aucacoyan@gmail.com
	name = Auca Maillot
[init]
	defaultBranch = main
[core]
	editor = code --wait
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    line-numbers = true
    side-by-side = true

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[commit]
	template = ~\\.gitmessage.txt
